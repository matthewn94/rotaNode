extends layout
block content
        // Header
        section#header
            header.major
                h1 RotaSync
                p
                    | Everything rota related for your enterprise

            .container
                ul.actions
                    li
                        a.button.special.scrolly(href='#one') Begin
        // One
        section#one.main.special
            .container
                span.image.fit.primary
                    img(src='images/pic03.jpg', alt='')
                .content
                    header.major
                        h2 What we do
                    //TODO: needs to access item without each loop - uncecessary
                    p=homePageData[0].sectionOne
                a.goto-next.scrolly(href='#two') Next
        // Two
        section#two.main.special
            .container
                span.image.fit.primary
                    img(src='images/pic02.jpg', alt='')
                .content
                    header.major
                        h2 How we can help
                    p=homePageData[0].sectionTwo
                    ul.icons-grid
                        li
                            span.icon.major.fa-check-square
                            h3 Improve margins
                        li
                            span.icon.major.fa-mobile
                            h3 Multiple devices
                        li
                            span.icon.major.fa-heart-o
                            h3 Support
                        li
                            span.icon.major.fa-wrench
                            h3 Continuously evolving
                a.goto-next.scrolly(href='#three') Next
        // Three
        section#three.main.special
            .container
                span.image.fit.primary
                    img(src='images/pic01.jpg', alt='')
                .content
                    header.major
                        h2 One more thing
                    p=homePageData[0].sectionThree

                    a.button.special.scrolly(href='/rotas') Have a look..
                a.goto-next.scrolly(href='#footer') Next
        // Footer
        section#footer
            .container
                header.major
                    h2 Get in touch
                        form(method='post', action='/contactconfirmation')
                            .row.uniform
                                div(class='6u 12u$(xsmall)')
                                    input#name(type='text', name='name', placeholder='Name')
                                div(class='6u$ 12u$(xsmall)')
                                    input#email(type='email', name='email', placeholder='Email')
                                div(class='12u$')
                                    textarea#message(name='message', placeholder='Message', rows='4')
                                div(class='12u$')
                                ul.actions
                                    li
                                        input.special(type='submit', value='Send Message')


            footer
                ul.icons
                    li
                        a.icon.alt.fa-twitter(href='https://twitter.com/matthewneill1?lang=en-gb')
                            span.label Twitter
                    li
                        a.icon.alt.fa-facebook(href='https://www.facebook.com/matt.neill.161')
                            span.label Facebook
                    li
                        a.icon.alt.fa-instagram(href='https://instagram.com/matthewneill94/')
                            span.label Instagram
                    li
                        a.icon.alt.fa-envelope(href='#')
                            span.label Email
                ul.copyright
                    li Â© Untitled
                    li
                        | Design:
                        a(href='http://html5up.net') HTML5 UP
                    li
                        | Demo Images:
                        a(href='http://www.pexels.com/') Pexels
